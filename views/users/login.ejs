<% layout("/layouts/boilerplate.ejs") %>
<div
  class="col-10 mx-auto mt-3 text-center p-1 border border-dark-subtle rounded-3 border-opacity-10"
>
  <h3 class="mt-3">User Login</h3>
  <div class="row">
    <div class="mb-3 col-8 mx-auto mt-3">
      <form action="/login" method="POST" novalidate class="needs-validation">
        <div>
          <label for="username" class="form-label">Username</label>
          <br />
          <input
            type="text"
            id="username"
            name="username"
            placeholder="Enter Username"
            class="form-control"
            pattern="^[a-zA-Z0-9 ]+$"
            required
          />
          <div class="invalid-feedback">Please enter a username.</div>
          <div class="valid-feedback">Looks Good</div>
        </div>
        <br /><br />
        <div>
          <label for="password" class="form-label">Password</label>
          <br />
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter Password"
            class="form-control"
            pattern="^[a-zA-Z0-9 ]+$"
            required
          />
          <div class="invalid-feedback">Please enter a valid email.</div>
          <div class="valid-feedback">Looks Good</div>
        </div>
        <br /><br />
        <div class="button-container">
          <button class="btn btn-outline-success" type="submit">
            <b>Login</b>
          </button>
          <a href="/signup"
            ><button type="button" class="btn btn-outline-dark">
              <b>Sign-up</b>
            </button></a
          >
          <a href="/listings"
            ><button type="button" class="btn btn-outline-dark">
              Back to Listings
            </button></a
          >
        </div>
      </form>
    </div>
  </div>
</div>
